<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_mainPageF_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_download"
        android:visibility="visible"
        />
    <RelativeLayout
        android:id="@+id/rtl_mainPageF_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/txt_mainPageF_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/api_error_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_mainPageF_tryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_again"
            android:layout_below="@+id/txt_mainPageF_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_wight"
            android:textAllCaps="false" />
    </RelativeLayout>


</RelativeLayout>